{
  "manifest_version": 3,
  "name": "Youtube Collections",
  "version": "1.0.0",
  "description": "Organize your YouTube subscriptions into custom categories and filter your feed with ease",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://www.youtube.com/*"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.youtube.com/*"],
      "js": ["index.js"],
      "css": ["output.css"],
      "run_at": "document_end"
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["*"],
      "matches": ["https://www.youtube.com/*"]
    }
  ]
}
